<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_tweetDetailHeadIco"
        android:layout_width="@dimen/space_49"
        android:layout_height="@dimen/space_49"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_18" />

    <TextView
        android:id="@+id/tv_tweetDetailNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_toRightOf="@+id/iv_tweetDetailHeadIco" />

    <View
        style="@style/h_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10" />
</RelativeLayout>