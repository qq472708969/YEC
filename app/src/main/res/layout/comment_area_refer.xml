<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_6"
    android:paddingLeft="@dimen/space_16"
    android:paddingRight="@dimen/space_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_area_curr_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/space_6"
            android:singleLine="true"
            android:text="健康和"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_6"
            android:layout_toRightOf="@+id/tv_area_curr_author"
            android:text="@string/reply"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_area_refr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_6"
            android:layout_toRightOf="@+id/tv_hf"
            android:singleLine="true"
            android:text="啊时代的风格"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_comment_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_area_refr"
            android:text="@string/reply_refer_content"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_area_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/space_6"
        android:layout_weight="1"
        android:textColor="@color/transparent_black"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>